@model IEnumerable<Tripster_2.Models.UserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<style>
    body {
        background-image: url('https://media.istockphoto.com/id/517188688/photo/mountain-landscape.jpg?s=612x612&w=0&k=20&c=A63koPKaCyIwQWOTFBRWXj_PwCrR4cEoOw2S9Q7yVl8=');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    .user-card {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
        transition: transform 0.2s ease-in-out;
    }

        .user-card:hover {
            transform: translateY(-5px);
        }

        .user-card h5 {
            color: #f0f0f0;
        }

    .btn {
        font-size: 0.875rem;
        margin-right: 5px;
    }

    .header-area {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

        .header-area h2 {
            text-shadow: 1px 1px 4px black;
        }
</style>

<div class="container mt-5">
    <div class="header-area">
        <h2>All Registered Users</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card-container">
        @foreach (var user in Model)
        {
            <div class="user-card">
                <h5><strong>Name:</strong> @user.Name</h5>
                <p><strong>Email:</strong> @user.Email</p>
                <p><strong>PhoneNumber:</strong> @user.PhoneNumber</p>
                <div>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this user?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        }
    </div>
</div>
