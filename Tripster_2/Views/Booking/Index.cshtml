@model IEnumerable<Tripster_2.Models.BookViewModel>

@{
    ViewData["Title"] = "Booking List";
}

<div class="container mt-5">
    <h2 class="fw-bold text-center text-gradient mb-5">✨ All Users Bookings ✨</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="booking-card shadow-lg rounded-4 p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="fw-bold">@item.Title</h4>
                            <span class="badge bg-gradient">@item.NumberofPeople Person(s)</span>
                        </div>

                        <p class="mb-2"><i class="bi bi-person-circle me-2"></i><strong>Name:</strong> @item.Name</p>
                        <p class="mb-2"><i class="bi bi-calendar-check me-2"></i><strong>Check-In:</strong> @item.CheckInDate.ToString("dd MMM yyyy")</p>
                        <p class="mb-2"><i class="bi bi-calendar-x me-2"></i><strong>Check-Out:</strong> @item.CheckOutDate.ToString("dd MMM yyyy")</p>

                        @if (User.IsInRole("User"))
                        {
                            <div class="mt-3 text-end">
                                <a class="btn btn-edit px-4 py-2" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square me-1"></i> Edit
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm border-0 mt-4">
            No bookings available.
        </div>
    }
</div>

<!-- Custom Styling -->
<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); /* Deep luxury gradient */
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    .text-gradient {
        background: linear-gradient(to right, #f7971e, #ffd200); /* Golden title effect */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .booking-card {
        background: rgba(255, 255, 255, 0.08); /* Glassmorphism */
        border-radius: 20px;
        backdrop-filter: blur(12px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.6);
    }

        .booking-card h4,
        .booking-card p {
            color: #fff;
        }

        .booking-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            border: 1px solid rgba(255, 255, 255, 0.4);
        }

    .badge.bg-gradient {
        background: linear-gradient(to right, #ff512f, #f09819); /* Orange-Red gradient */
        font-size: 0.85rem;
        padding: 8px 14px;
        border-radius: 12px;
        color: #fff;
        font-weight: 600;
    }

    .btn-edit {
        background: linear-gradient(to right, #6a11cb, #2575fc); /* Purple to Blue */
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 25px;
        transition: 0.3s;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

        .btn-edit:hover {
            background: linear-gradient(to right, #2575fc, #6a11cb);
            transform: scale(1.07);
            box-shadow: 0 6px 15px rgba(0,0,0,0.35);
        }
</style>

<!-- Bootstrap Icons CDN -->
