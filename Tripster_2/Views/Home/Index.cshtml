@{
    ViewData["Title"] = "Home Page";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&family=Lora:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">

<!-- Hero Section -->
<div class="hero-section d-flex align-items-center justify-content-center">
    <div class="hero-content text-center">
        <h1 class="hero-title">
            <span class="typing-text">Welcome to Tripster Hotels</span>
        </h1>
        <p class="hero-subtitle fade-in-delay">Luxury. Comfort. Memories that last forever.</p>
        <a class="btn-book fade-in-delay2" asp-controller="Hotels" asp-action="Index">Book Now</a>
    </div>
</div>

<!-- Styles -->
<style>
    /* Hero Section Background */
    .hero-section {
        position: relative;
        height: 100vh;
        background: url('/images/hotel-bg.jpg') no-repeat center center/cover;
        overflow: hidden;
    }

        /* Dark overlay */
        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.45);
            z-index: 1;
        }

    /* Hero content above overlay */
    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
        padding: 0 20px;
    }

    /* Classy heading font */
    .typing-text {
        display: inline-block;
        font-family: 'Cinzel', serif;
        font-size: 4rem;
        font-weight: 700;
        letter-spacing: 2px;
        color: white;
        text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.6);
        white-space: normal;
        width: auto;
    }

    /* Elegant subtitle font */
    .fade-in-delay {
        font-family: 'Lora', serif;
        font-size: 1.6rem;
        color: #f0f0f0;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
    }

    /* Button styling */
    .fade-in-delay2 {
        background: #FFD700;
        color: #000;
        padding: 12px 30px;
        font-size: 1.2rem;
        border-radius: 30px;
        font-weight: bold;
        font-family: 'Cinzel', serif;
        text-decoration: none;
        display: inline-block;
    }

        .fade-in-delay2:hover {
            background: #e6c200;
            color: black;
            box-shadow: 0 4px 15px rgba(0,0,0,0.4);
        }
</style>
