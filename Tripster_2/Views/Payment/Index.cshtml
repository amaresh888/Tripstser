@model IEnumerable<Tripster_2.Models.PaymentViewModel>

@{
    ViewData["Title"] = "Payments";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        padding: 40px;
    }

    h1 {
        text-align: center;
        color: white;
        font-size: 2.5rem;
        margin-bottom: 30px;
        font-weight: bold;
    }

    .payment-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
    }

    .payment-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .payment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.3);
        }

    .payment-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .payment-details {
        margin-bottom: 10px;
    }

    .label {
        font-weight: bold;
        color: #555;
    }

    .actions a {
        margin-right: 10px;
        text-decoration: none;
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 8px;
        transition: 0.3s;
    }

    .edit-btn {
        background: #4cafef;
        color: white;
    }

        .edit-btn:hover {
            background: #2196f3;
        }

    .details-btn {
        background: #9c27b0;
        color: white;
    }

        .details-btn:hover {
            background: #7b1fa2;
        }

    .delete-btn {
        background: #e74c3c;
        color: white;
    }

        .delete-btn:hover {
            background: #c0392b;
        }

    .create-btn {
        display: inline-block;
        margin-bottom: 20px;
        padding: 10px 20px;
        background: #28a745;
        color: white;
        border-radius: 10px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .create-btn:hover {
            background: #218838;
        }
</style>

<h1>💳 Payments</h1>

<p>
    <a asp-action="Create" class="create-btn">+ Add New Payment</a>
</p>

<div class="payment-container">
    @foreach (var item in Model)
    {
        <div class="payment-card">
            <div class="payment-title">Payment ID: @item.PaymentId</div>

            <div class="payment-details"><span class="label">Booking ID:</span> @item.BookingId</div>
            <div class="payment-details"><span class="label">Amount:</span> ₹@item.Amount</div>
            <div class="payment-details"><span class="label">Method:</span> @item.PaymentMethod</div>
            <div class="payment-details"><span class="label">Status:</span> @item.PaymentStatus</div>
            <div class="payment-details"><span class="label">Date:</span> @item.PaymentDate.ToString("dd-MMM-yyyy")</div>

            <div class="actions">
                @Html.ActionLink("Edit", "Edit", new { id = item.PaymentId }, new { @class = "edit-btn" })
                @Html.ActionLink("Details", "Details", new { id = item.PaymentId }, new { @class = "details-btn" })
                @Html.ActionLink("Delete", "Delete", new { id = item.PaymentId }, new { @class = "delete-btn" })
            </div>
        </div>
    }
</div>
