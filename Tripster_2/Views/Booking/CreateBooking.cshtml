                            <label asp-for="CheckInDate"></label>
                            <span asp-validation-for="CheckInDate" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="CheckOutDate" type="date" class="form-control" placeholder="Check-out Date" />
                            <label asp-for="CheckOutDate"></label>
                            <span asp-validation-for="CheckOutDate" class="text-danger small"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NumberofPeople" class="form-control" placeholder="NumberofPeople" />
                            <label asp-for="NumberofPeople"></label>
                            <span asp-validation-for="NumberofPeople" class="text-danger small"></span>
