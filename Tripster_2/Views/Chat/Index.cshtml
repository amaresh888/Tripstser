
@{
    ViewData["Title"] = "Index";
}

<h2>Hotel Chatbot</h2>

<form asp-controller="Chat" asp-action="Ask" method="post">
    <input type="text" name="question" placeholder="Ask me about hotels..." style="width:300px;" />
    <button type="submit">Ask</button>
</form>

<div style="margin-top:20px;">
    <strong>Bot Answer:</strong>
    <p>@ViewBag.Answer</p>
</div>


