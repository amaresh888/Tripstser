@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: linear-gradient(135deg, #ffffff 0%, #000000 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-card {
        background: #fff;
        padding: 40px 35px;
        border-radius: 16px;
        box-shadow: 0px 10px 25px rgba(0,0,0,0.15);
        max-width: 450px;
        width: 100%;
        animation: fadeInUp 0.6s ease forwards; /* ✅ runs on page load */
    }

        .login-card h1 {
            font-size: 2rem;
            font-weight: 700;
            text-align: center;
            color: #333;
            margin-bottom: 10px;
        }

        .login-card h2 {
            font-size: 1.1rem;
            text-align: center;
            color: #666;
            margin-bottom: 25px;
        }

    .form-group label {
        font-weight: 500;
        color: #444;
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        border: 1px solid #ccc;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #ff6a00;
            box-shadow: 0 0 6px rgba(255,106,0,0.3);
        }

    .checkbox label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
        color: #495057;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff6a00 0%, #ee0979 100%);
        border: none;
        padding: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ee0979 0%, #ff6a00 100%);
            transform: scale(1.02);
        }

    .external-login h5 {
        color: #555;
        font-weight: 600;
    }

    .external-login button {
        border-radius: 8px;
        padding: 10px 20px;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    a {
        color: #ee0979;
        text-decoration: none;
        transition: 0.3s;
    }

        a:hover {
            text-decoration: underline;
            color: #ff6a00;
        }

    /* ✅ Fixed Keyframes */
   
    d
</style>

<div class="login-container">
    <div class="login-card">
        <h1>@ViewData["Title"]</h1>
        <h2>Use your account to log in</h2>

        <!-- ✅ Properly closed form -->
        <form id="account" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100">Log in</button>
        </form>
    </div>
</div>
